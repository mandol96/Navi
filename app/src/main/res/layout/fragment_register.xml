<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back_space"
            app:title="회원가입" />

        <TextView
            android:id="@+id/tv_register_id"
            style="@style/AppTextLabel.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="아이디"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_register" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_register_id"
            style="@style/AppTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:layout_constraintEnd_toEndOf="@id/tv_register_id"
            app:layout_constraintStart_toStartOf="@id/tv_register_id"
            app:layout_constraintTop_toBottomOf="@id/tv_register_id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ei_register_id"
                style="@style/AppTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디를 입력해주세요"
                android:inputType="text"
                android:maxLength="20"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_register_password"
            style="@style/AppTextLabel.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="비밀번호"
            app:layout_constraintEnd_toEndOf="@id/tv_register_id"
            app:layout_constraintStart_toStartOf="@id/tv_register_id"
            app:layout_constraintTop_toBottomOf="@id/ti_register_id" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_register_password"
            style="@style/AppTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:layout_constraintEnd_toEndOf="@id/tv_register_id"
            app:layout_constraintStart_toStartOf="@id/tv_register_id"
            app:layout_constraintTop_toBottomOf="@id/tv_register_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ei_register_password"
                style="@style/AppTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호를 입력해주세요"
                android:inputType="text"
                android:maxLength="20"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/AppStateButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginBottom="60dp"
            android:enabled="false"
            android:text="@string/confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_register_id"
            app:layout_constraintStart_toStartOf="@id/tv_register_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>

