<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingBottom="24dp"
    android:paddingEnd="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_recommendation_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/description_post_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppImageShape"
        tools:background="@color/grey_01" />

    <TextView
        android:id="@+id/tv_recommendation_title"
        style="@style/AppTextLabel.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_recommendation_image"
        app:layout_constraintTop_toTopOf="@id/iv_recommendation_image"
        tools:text="이름" />

    <TextView
        android:id="@+id/tv_recommendation_description"
        style="@style/AppTextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_recommendation_title"
        app:layout_constraintTop_toBottomOf="@id/tv_recommendation_title"
        tools:text="설명" />

</androidx.constraintlayout.widget.ConstraintLayout>