<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

    <style name="AppTextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextLabel.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextLabel.Grey01">
        <item name="android:textColor">@color/grey_01</item>
    </style>

    <style name="AppTextField" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/orange_700</item>
        <item name="hintTextColor">@color/grey_01</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="AppDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/orange_700</item>
        <item name="hintTextColor">@color/grey_01</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="AppStateButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selector_text_is_enabled_color</item>
        <item name="backgroundTint">@color/selector_background_is_enabled_color</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>